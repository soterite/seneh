% -*- mode: erlang; -*-

{deps, [{cowboy, {git, "git://github.com/ninenines/cowboy.git",
                 {tag, "2.6.3"}}}]}.

{shell, [{apps, [seneh]}]}.     % starts application within shell

{relx, [{release, {"seneh_node", "0.1.1"}, ["seneh"]},
        {vm_args, "config/seneh_node.args"},
        {dev_mode, false},
        {include_erts, true},
        {system_libs, true},
        {extended_start_script, true}]}.

